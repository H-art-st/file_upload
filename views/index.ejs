<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">File Upload</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required />
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" onchange="fileValidation(),Filevalidation()" required />
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Submit" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <% if (users !='' ) { %>
                                <table class="table table-striped text-center">
                                    <thead>
                                        <tr class="table-dark">
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((row, index)=> { %>
                                            <tr class="align-middle">
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td>
                                                    <%= row.name %>
                                                </td>
                                                <td><img src="<%= row.image %>" width="150" class="img-thumbnail" />
                                                </td>
                                                <td>
                                                    <a href="/edit/<%= row._id %>" class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id %>" class="text-danger"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">No Users Found In Database</h1>

                                <% } %>

                        </div>
            </div>
        </div>
    </div>
    

    <%- include('layout/footer') %>